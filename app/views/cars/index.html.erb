<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Dealership</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.brand %></td>
        <td><%= car.description %></td>
        <td><%= car.dealership_id %></td>
        <td>$<%= car.price %></td>
        <td><%= car.condition %></td>
        <td><%= car.stock %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) if can? :update, Car %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Car %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path if can? :create, Car %>
