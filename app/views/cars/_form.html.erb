<%= form_with(model: car) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :dealership_id %>
    <%= form.collection_select :dealership_id, Dealership.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: 'any' %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.select :condition, options_for_select(Car.conditions.map {|k, v| [k.humanize.capitalize, k]}) %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock, step: 'any' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
